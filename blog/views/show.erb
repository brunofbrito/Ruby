<div class="row">
<div class="col-md-2"></div>
  <div class="col-md-8">
  <h1 class="text-center"><%= @post.title %></h1>
    <p><%= @post.body %></p>
    <hr>
    <p><span class="glyphicon glyphicon-pencil"></span> Escrito por: <%= @post.author %></p>
    <hr>
      <ul class="list-unstyled">
        <% @comment.each do |comment| %>
        <li><span class="glyphicon glyphicon-user"></span> "<%= comment.body %>" <em>by</em> <%= comment.author %></li>
        <% end %>
      </ul>
    </div>
  <div class="col-md-2">
    <h3 class="text-center">Sidebar do poder</h3>
  </div>
</div>