<section id="add">
  <form action="/" method="post">
    <textarea name="content" placeholder="A tua nota&hellip;"></textarea>
    <input type="submit" value="Apontar!">
  </form>
</section>
 
<% @notes.each do |note| %>
  <article <%= 'class="complete"' if note.complete %>>
    <p>
      <%= note.content %>
      <span><a href="/<%= note.id %>">[editar]</a></span>
    </p>
    <p class="links">
      <a href="/<%= note.id %>/complete">&#8623;</a>
    </p>
    <p class="meta">Data de criação: <%= note.created_at %></p>
  </article>
<% end %>